{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>aquaproj/aqua-renovate-config#2.3.1",
    "schedule:monthly"
  ],
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchPackageNames": ["golang/go", "go", "golang"],
      "groupName": "golang"
    },
    {
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    }
  ]
}
